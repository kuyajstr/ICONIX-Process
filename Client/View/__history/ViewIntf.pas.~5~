unit ViewIntf;

interface

uses
  ControllerIntf;

type
  IView<T: IController> = interface
    ['{24CA421D-C6BA-4DFD-AE63-127ABFF1EC8D}']
    function GetController: T;
    procedure SetController(AController: T);

    property Controller: T read GetController write SetController;
  end;

implementation

end.
